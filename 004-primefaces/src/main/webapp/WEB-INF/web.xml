<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	      version="3.0">

    <!-- La dépendance de ce thème de Primefaces est déclarée dans pom.xml-->
    <!-- ce context-param permet de configurer primefaces pour prendre en compte 
    le thème mint-choc comme thème par défaut. -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>mint-choc</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
